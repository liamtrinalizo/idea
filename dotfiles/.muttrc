set sendmail=/usr/bin/msmtp

set mbox_type=Maildir
set folder="~/mail"
mailboxes `echo -n "+ "; for file in ~/maildir/*; do box=$(basename "$file"); echo -n "\"+$box\" "; done`
set spoolfile="~/mail/work/INBOX"
set postponed="+Drafts"
set record="+work/Sent"

set hostname="addi-data.com"
set realname="Jean Martinez-Le Ninan"
set from="martinez-le_ninan.jean@addi-data.com"
set envelope_from=yes
set hidden_host=yes
set use_domain=yes
set pager_stop=yes
my_hdr From: martinez-le_ninan.jean@addi-data.com
set attribution="%n <%a> wrote on %{%a} [%{%Y-%b-%d %H:%M:%S %Z}]:"
set strict_threads = no
set date_format="!%a, %b %d, %Y at %I:%M:%S%p %Z"
set index_format="%4C %Z[%[%a %m/%d %H:%M]] %-16.16L%?X? [%X]? (%?l?%4l&%4c?) %s"
set pager_index_lines=20
